{
    "id": "urn:bearer",
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "name": "MyLampThing",
    "description": "Valid TD demonstrating how to use bearer security scheme",
    "securityDefinitions": {
        "bearer_sc": {
            "scheme": "bearer",
            "in":"header",
            "format": "jwt",
            "alg": "ES256",
            "authorization": "https://servient.example.com:8443/",
            "name": "myParameter"
        }
    },
    "security": ["bearer_sc"],
    "properties": {
        "status": {
            "type": "string",
            "forms": [{
                "href": "https://mylamp.example.com/status"
            }]
        }
    }
}