{
    "id": "urn:cert",
    "name": "MyLampThing",
    "description": "Valid TD demonstrating how to use the cert scheme",
    "securityDefinitions": {
        "cert_sc": {
            "scheme": "cert",
            "identity":"ourPresharedIdentity"
        }
    },
    "security": ["cert_sc"],
    "properties": {
        "status": {
            "type": "string",
            "forms": [{
                "href": "https://mylamp.example.com/status"
            }]
        }
    }
}