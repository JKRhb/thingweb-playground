{
    "title": "td-context",
    "description": "The root object of a Thing Description instance MAY include the @context name known from JSON-LD [[!json-ld]] with the value URI of the Thing description context file http://www.w3.org/ns/td.",
    "is-complex": true,
    "$schema ": "http://json-schema.org/draft-06/schema#",
    "also": ["td-vocab-at-context--Thing", "td-jsonld-keywords_at-context"],
    "type": "object",
    "if": {
        "required": ["@context"],
        "properties": {
            "@context": {
                "$ref": "#/definitions/thing-context"
            }
        }
    },
    "then": {
        "const": "td-context=pass"
    },
    "additionalProperties": true,
    "definitions": {
        "thing-context": {
            "oneOf": [{
                    "type": "array",
                    "items": {
                        "anyOf": [{
                                "$ref": "#/definitions/url"
                            },
                            {
                                "type": "object"
                            }
                        ]
                    },
                    "contains": {
                        "type": "string",
                        "enum": [
                            "http://www.w3.org/ns/td", "http://w3.org/ns/td"
                        ]
                    }
                },
                {
                    "type": "string",
                    "enum": [
                        "http://www.w3.org/ns/td", "http://w3.org/ns/td"
                    ]
                }
            ]
        },
        "url": {
            "type": "string",
            "format": "uri-reference"
        }
    }
}