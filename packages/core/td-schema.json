                },
                "writeOnly": {
                    "type": "boolean"
                },
                "readOnly": {
                    "type": "boolean"
                },
                "oneOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/dataSchema"
                    }
                },
                "unit": {
                    "type": "string"
                },
                "enum": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true
                },
                "format": {
                    "type": "string"
                },
                "const": {},
                "contentEncoding": {
                    "type": "string"
                },
                "contentMediaType": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "boolean",
                        "integer",
                        "number",
                        "string",
                        "object",
                        "array",
                        "null"
                    ]
                },
                "items": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/dataSchema"
                        },
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/dataSchema"
                            }
                        }
                    ]
                },
                "maxItems": {
                    "type": "integer",
                    "minimum": 0
                },
                "minItems": {
                    "type": "integer",
                    "minimum": 0
                },
                "minimum": {
                    "type": "number"
                },
                "maximum": {
                    "type": "number"
                },
                "minLength": {
                    "type": "integer",
                    "minimum": 0
                },
                "maxLength": {
                    "type": "integer",
                    "minimum": 0
                },
                "multipleOf": {
                        "$ref": "#/$defs/multipleOfDefinition"
                },
                "properties": {
                    "additionalProperties": {
                        "$ref": "#/$defs/dataSchema"
                    }
                },
                "required": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "additionalResponsesDefinition":{
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "contentType": {
                        "type": "string"
                    },
                    "schema": {
                        "type": "string"
                    },
                    "success":{
                        "type":"boolean"
                    }
                }
            }
        },
        "multipleOfDefinition": {
            "type": ["integer","number"],
            "exclusiveMinimum": 0
        },
        "form_element_property": {
            "type": "object",
