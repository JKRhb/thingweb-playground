        "link_element": {
            "allOf": [
                {
                    "$ref": "#/$defs/base_link_element"
                },
                {
                    "not": {
                        "description": "A basic link element should not contain sizes",
                        "type": "object",
                        "properties": {
                            "sizes": {}
                        },
                        "required": [
                            "sizes"
                        ]
                    }
                },
                {
                    "not": {
                        "description": "A basic link element should not contain icon or tm:extends",
                        "properties": {
                            "rel": {
                                "enum": [
                                    "icon",
                                    "tm:extends"
                                ]
                            }
                        },
                        "required": [
                            "rel"
                        ]
                    }
